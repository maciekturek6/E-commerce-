<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/bootstrap/dist/css/*.min.css"/>
    <title>@ViewBag.Title</title>
    <!--atrybut pomocniczy znacznika umieści komunikat blędu w elemencie span i przypisze temu znacznikowi klase input validation error-->
    <style>
        .input-validation-error { border-color: red;background-color: #fee;}
    </style>
    <script src="lib/bootstrap/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="lib/bootstrap/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="m-1 p-1">
<div class="bg-info p-2 row">
    <div class="col">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-sm btn-primary"
           asp-action="Logout" asp-controller="Account">Wyloguj</a>
    </div>
</div>
<!--obsługa komunikatu zapisanych wcześniej w tempdata-->
@if (TempData["message"] != null)
    {
        <div class="alert alert-success mt-1">@TempData["message"]</div>
    }
@RenderBody()
</body>
</html>
 
