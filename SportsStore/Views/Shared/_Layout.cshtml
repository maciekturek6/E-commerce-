<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/bootstrap/bootstrap/dist/**/*.min.css"  
          asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/fontawesome/css/*.css" />
    <!-- Przykład wbudowanych klas atrybutu pomocniczego znacznika, umożliwia dodawanie i usuwanie plików w strukturze katalogu wwwroot-->
    <title>SportsStore</title>
</head>
<body>
<div class="navbar navbar-inverse bg-inverse" role="navigation">
    <div class="row">        
        <a class="col navbar-brand" href="#">Sklep sportowy</a>
        <div class="col-4 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        <!-- chcemu aby lista kategorii pojawiała się na wszystkich stronach-->
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
        @RenderBody()
    </div>
</div>
</body>
</html>
